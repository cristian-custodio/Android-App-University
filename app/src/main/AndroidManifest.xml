<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cristiancustodio.usmapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:label="USMApp"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HomeActivity" />
        <activity android:name=".StudentPortalActivity" />
        <activity android:name=".AcademicPrograms" />
        <activity android:name=".InternshipActivity" />
        <activity android:name=".AdmissionsActivity" />
        <activity android:name=".CertificateActivity" />
        <activity android:name=".NonCreditActivity"></activity>
    </application>

</manifest>