<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cristiancustodio.usmapp.AdmissionsActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:scaleType="fitEnd"
        android:src="@drawable/usmlogo_background4" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:text="Admission Form"
        android:textColor="@color/darkerblue"
        android:textSize="24sp"
        android:textStyle="bold" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/admissionsToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkerblue"
        android:minHeight="60dp"
        android:theme="@style/MainMenu"
        app:layout_constraintLeft_toLeftOf="@+id/imageView2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/android:Theme.Holo.Light"
        app:title="@string/actionbarTitle"
        app:titleTextColor="#ffffff"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/admissionsToolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Develop Your Calling"
        android:textColor="@color/darkerblue"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView10"
        android:padding="10dp"
        android:text="My passion is to help you develop your calling through the supernatural power of God. When you enter this University, you will be activated, taught, trained, equipped, and sent out to fulfill your purpose. Our courses are not based simply on transference of knowledge; rather, you will have a personal experience with the living God with each teaching."
        android:textAlignment="viewStart"
        android:textColor="@color/darkerblue" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView5"
        android:layout_below="@+id/textView22"
        android:layout_marginTop="8dp"
        android:text="Apostle Guillermo Maldonado"
        android:textColor="@color/darkerblue" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView23"
        android:layout_below="@+id/textView23"
        android:text="Founder and President"
        android:textColor="@color/darkerblue"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView25"
        android:layout_marginTop="6dp"
        android:padding="10dp"
        android:text="You may fill out the admission form at any time; there are no deadlines to apply. However, in order to begin classes, you must have been previously admitted."
        android:textColor="@color/darkerblue" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/textView24"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:onClick="AdmissionApplicationActivity"
        app:srcCompat="@drawable/admissionsform" />
    <android.support.v7.widget.ActionMenuView
        android:id="@+id/bottom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:backgroundTint="@color/darkerblue"/>

</RelativeLayout>
