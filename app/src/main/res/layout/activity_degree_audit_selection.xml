<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cristiancustodio.usmapp.AdmissionsActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginTop="125dp"
        android:scaleType="fitCenter"
        android:src="@drawable/usmlogo_background4" />


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/editCoursesButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/darkerblue"
            android:onClick="AssociateDegree"
            android:text="Associate Degree" />

        <Button
            android:id="@+id/saveReport"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/darkerblue"
            android:onClick="BachelorsDegree"
            android:text="Bachelors Degree" />

    </LinearLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/admissionsToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkerblue"
        android:minHeight="60dp"
        android:theme="@style/MainMenu"
        app:layout_constraintLeft_toLeftOf="@+id/imageView2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/android:Theme.Holo.Light"
        app:title="@string/actionbarTitle"
        app:titleTextColor="#ffffff"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/admissionsToolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Degree Audit"
        android:textColor="@color/darkerblue"
        android:textSize="36sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="174dp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Welcome to the University's Degree Audit Module. Here you can select the courses you have taken to verify the requirements needed for graduation. Please select your degree program."
        android:textColor="@color/darkerblue" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="310dp"
        android:layout_height="match_parent"

        android:layout_alignEnd="@+id/linearLayout3"
        android:layout_alignTop="@+id/textView"
        android:layout_marginTop="35dp"
        app:srcCompat="@drawable/gradcap" />

    <android.support.v7.widget.ActionMenuView
        android:id="@+id/bottom_toolbar_home_degree"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:background="?attr/colorPrimary"
        android:backgroundTint="@color/darkerblue"
        android:elevation="4dp" />


</RelativeLayout>
